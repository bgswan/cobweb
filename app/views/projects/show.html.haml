.container
  %h1
    Project:
    = @project.name

  .col-md-6
    %h2 Members

    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Access Level
      %tbody
        = render partial: 'member', collection: @project.members

  .col-md-6
    %h2 Properties

    %table.table.table-striped
      %thead
        %tr
          %th{ rowspan: 2 } Address
          %th{ colspan: 2 }
            CO
            %sub 2
          %th{ colspan: 2 } KWh
          %th{ colspan: 2 } &pound;
        %tr
          %th
            m
            %sup 2
          %th Occupant
          %th
            m
            %sup 2
          %th Occupant
          %th
            m
            %sup 2
          %th Occupant
      %tbody
        = render partial: "property", collection: @project.properties
